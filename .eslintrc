{
  "env": {
    "es6": true,
    "node": true
  },
  "ecmaFeatures": {
    "modules": true
  },
  "parser": "babel-eslint",
  "rules": {
    "semi": [1, "always"],
    "quotes": [1, "single", { "avoidEscape": true }],
    "no-irregular-whitespace": 1,
    "no-unexpected-multiline": 1,
    "block-scoped-var": 1,
    "curly": 2,
    "dot-notation": 2,
    "eqeqeq": [2, "smart"],
    "no-else-return": 1,
    "no-eval": 2,
    "no-extra-bind": 1,
    "no-implicit-coercion": 1,
    "no-implied-eval": 2,
    "no-multi-spaces": 1,
    "no-redeclare" : 2,
    "no-return-assign": 2,
    "no-script-url": 2,
    "no-sequences": 1,
    "no-useless-return": 1,
    "radix": 2,
    "require-await": 2,
    "space-before-blocks": 1,
    "keyword-spacing": 1,
    "arrow-parens": [2, "always"],
    "arrow-spacing": [2, { "before": true, "after": true }],
    "no-confusing-arrow": "error",
    "no-var": 2,
    "indent": [2, 2],
    "prefer-arrow-callback": [ 2, { "allowNamedFunctions": true } ],
    "prefer-const": 2
  }
}
